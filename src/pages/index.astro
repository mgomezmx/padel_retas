---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Padel Match Organizer">
	<main class="container">
		<h1>Padel <span class="text-gradient">Retas</span></h1>
        
        <div class="controls">
            <input type="date" id="date-selector" />
        </div>

        <div id="courts-container" class="courts-grid">
            <!-- Courts will be rendered here -->
            <p class="loading">Select a date to view matches</p>
        </div>

        <div id="user-info" class="user-info">
            <p>Welcome, <span id="player-name-display">Guest</span></p>
            <button id="change-name-btn" class="btn-secondary">Change Name</button>
        </div>
	</main>

    <dialog id="name-dialog">
        <form method="dialog">
            <h3>Enter your details</h3>
            <div class="form-group">
                <label for="player-name-input">Name</label>
                <input type="text" id="player-name-input" placeholder="Your Name" required />
            </div>
            <div class="form-group">
                <label for="player-level-input">Level</label>
                <select id="player-level-input">
                    <option value="1">1 (Pro)</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6 (Beginner)</option>
                </select>
            </div>
            <button type="submit" id="save-name-btn">Save & Join</button>
        </form>
    </dialog>
</Layout>

<script>
    // Types
    interface Booking {
        id: string;
        match_id: string;
        court_index: number;
        spot_index: number;
        player_name: string;
        player_level?: number;
        player_token: string;
    }

    interface MatchData {
        match: {
            id: string;
            date: string;
            start_time?: string;
            courts_count: number;
        };
        bookings: Booking[];
    }

    // State
    let currentDate: string = '';
    let currentMatchData: MatchData | null = null;
    let playerToken: string = localStorage.getItem('padel_token') || '';
    let playerName: string = localStorage.getItem('padel_name') || '';
    let playerLevel: string = localStorage.getItem('padel_level') || '1';

    // Initialize Token
    if (!playerToken) {
        playerToken = crypto.randomUUID();
        localStorage.setItem('padel_token', playerToken);
    }

    // DOM Elements
    const dateSelector = document.getElementById('date-selector') as HTMLInputElement;
    const courtsContainer = document.getElementById('courts-container') as HTMLDivElement;
    const nameDialog = document.getElementById('name-dialog') as HTMLDialogElement;
    const playerNameInput = document.getElementById('player-name-input') as HTMLInputElement;
    const playerLevelInput = document.getElementById('player-level-input') as HTMLSelectElement;
    const playerNameDisplay = document.getElementById('player-name-display') as HTMLSpanElement;
    const changeNameBtn = document.getElementById('change-name-btn') as HTMLButtonElement;

    // Helper: Update UI based on user state
    function updateUserState() {
        if (playerName) {
            playerNameDisplay.textContent = `${playerName} (Lvl ${playerLevel})`;
        } else {
            playerNameDisplay.textContent = 'Guest';
        }
    }

    // Helper: Fetch Match Data
    async function fetchMatchData(date: string) {
        courtsContainer.innerHTML = '<p class="loading">Loading...</p>';
        try {
            const res = await fetch(`/api/matches/${date}`);
            if (res.status === 404) {
                courtsContainer.innerHTML = '<p class="no-match">No matches scheduled for this day.</p>';
                currentMatchData = null;
                return;
            }
            if (!res.ok) throw new Error('Failed to fetch');
            
            const data = await res.json();
            currentMatchData = data;
            renderCourts();
        } catch (error) {
            console.error(error);
            courtsContainer.innerHTML = '<p class="error">Error loading matches.</p>';
        }
    }

    // Helper: Render Courts
    function renderCourts() {
        if (!currentMatchData) return;

        courtsContainer.innerHTML = '';
        const { match, bookings } = currentMatchData;

        // Display Date and Time
        const dateObj = new Date(match.date + 'T00:00:00');
        const dayName = dateObj.toLocaleDateString('en-US', { weekday: 'long' });
        const timeDisplay = match.start_time ? ` at ${match.start_time}` : '';
        
        const infoDiv = document.createElement('div');
        infoDiv.className = 'match-info';
        infoDiv.innerHTML = `<h2>${dayName} <span class="text-gradient">${match.date}</span>${timeDisplay}</h2>`;
        courtsContainer.appendChild(infoDiv);

        for (let i = 1; i <= match.courts_count; i++) {
            const courtDiv = document.createElement('div');
            courtDiv.className = 'court-card';
            
            const title = document.createElement('h3');
            title.textContent = `Court ${i}`;
            courtDiv.appendChild(title);

            const spotsDiv = document.createElement('div');
            spotsDiv.className = 'spots-grid';

            for (let j = 1; j <= 4; j++) {
                const booking = bookings.find(b => b.court_index === i && b.spot_index === j);
                const spotBtn = document.createElement('button');
                spotBtn.className = 'spot-btn';
                
                if (booking) {
                    spotBtn.classList.add('taken');
                    
                    const nameSpan = document.createElement('div');
                    nameSpan.className = 'spot-name';
                    nameSpan.textContent = booking.player_name;
                    
                    const levelSpan = document.createElement('div');
                    levelSpan.className = 'spot-level';
                    levelSpan.textContent = booking.player_level ? `Lvl ${booking.player_level}` : '';
                    
                    spotBtn.appendChild(nameSpan);
                    spotBtn.appendChild(levelSpan);
                    
                    // Allow delete if it's our booking
                    if (booking.player_token === playerToken) {
                        spotBtn.classList.add('mine');
                        spotBtn.title = 'Click to cancel';
                        spotBtn.onclick = () => cancelBooking(booking.id);
                    } else {
                        spotBtn.disabled = true;
                    }
                } else {
                    spotBtn.classList.add('free');
                    spotBtn.textContent = 'Join';
                    spotBtn.onclick = () => handleJoinClick(match.id, i, j);
                }
                spotsDiv.appendChild(spotBtn);
            }
            courtDiv.appendChild(spotsDiv);
            courtsContainer.appendChild(courtDiv);
        }
    }

    // Action: Join
    async function handleJoinClick(matchId: string, courtIndex: number, spotIndex: number) {
        // Always show dialog to confirm/update details
        playerNameInput.value = playerName;
        playerLevelInput.value = playerLevel;
        
        // Store current context in dialog dataset
        nameDialog.dataset.matchId = matchId;
        nameDialog.dataset.courtIndex = courtIndex.toString();
        nameDialog.dataset.spotIndex = spotIndex.toString();
        
        nameDialog.showModal();
    }

    // Action: Confirm Join
    async function confirmJoin() {
        const name = playerNameInput.value.trim();
        const level = playerLevelInput.value;
        
        if (!name) return;

        // Save locally
        playerName = name;
        playerLevel = level;
        localStorage.setItem('padel_name', playerName);
        localStorage.setItem('padel_level', playerLevel);
        updateUserState();

        const matchId = nameDialog.dataset.matchId;
        const courtIndex = parseInt(nameDialog.dataset.courtIndex || '0');
        const spotIndex = parseInt(nameDialog.dataset.spotIndex || '0');

        try {
            const res = await fetch('/api/bookings', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    match_id: matchId,
                    court_index: courtIndex,
                    spot_index: spotIndex,
                    player_name: playerName,
                    player_level: parseInt(playerLevel),
                    player_token: playerToken
                })
            });

            if (res.ok) {
                nameDialog.close();
                fetchMatchData(currentDate);
            } else {
                const err = await res.json();
                alert(err.error || 'Failed to book');
            }
        } catch (e) {
            console.error(e);
            alert('Error booking spot');
        }
    }

    // Action: Cancel
    async function cancelBooking(bookingId: string) {
        if (!confirm('Cancel your booking?')) return;

        try {
            const res = await fetch('/api/bookings', {
                method: 'DELETE',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    booking_id: bookingId,
                    player_token: playerToken
                })
            });

            if (res.ok) {
                fetchMatchData(currentDate);
            } else {
                alert('Failed to cancel');
            }
        } catch (e) {
            console.error(e);
            alert('Error cancelling');
        }
    }

    // Event Listeners
    dateSelector.addEventListener('change', (e) => {
        currentDate = (e.target as HTMLInputElement).value;
        if (currentDate) fetchMatchData(currentDate);
    });

    // Set default date to today
    const today = new Date().toISOString().split('T')[0];
    dateSelector.value = today;
    currentDate = today;
    // Try fetch immediately
    fetchMatchData(today);

    changeNameBtn.addEventListener('click', () => {
        playerNameInput.value = playerName;
        playerLevelInput.value = playerLevel;
        nameDialog.showModal();
    });

    const saveNameBtn = document.getElementById('save-name-btn') as HTMLButtonElement;
    saveNameBtn.addEventListener('click', (e) => {
        e.preventDefault();
        // If dialog was opened for booking, confirm join
        if (nameDialog.dataset.matchId) {
            confirmJoin();
        } else {
            // Just saving name
            const name = playerNameInput.value.trim();
            const level = playerLevelInput.value;
            if (name) {
                playerName = name;
                playerLevel = level;
                localStorage.setItem('padel_name', playerName);
                localStorage.setItem('padel_level', playerLevel);
                updateUserState();
                nameDialog.close();
            }
        }
    });

    updateUserState();
</script>

<style>
    .controls {
        margin-bottom: 2rem;
        text-align: center;
    }
    input[type="date"] {
        padding: 0.5rem;
        font-size: 1.2rem;
        border-radius: 8px;
        border: none;
        background: #333;
        color: white;
    }
    .courts-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }
    .court-card {
        background: var(--card-bg);
        padding: 1.5rem;
        border-radius: 12px;
        border: 1px solid #333;
    }
    .court-card h3 {
        margin-top: 0;
        text-align: center;
        color: rgb(var(--accent-light));
    }
    .spots-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }
    .spot-btn {
        padding: 1rem;
        border-radius: 8px;
        font-size: 1rem;
        text-align: center;
        transition: all 0.2s;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 80px;
    }
    .spot-btn.free {
        background: rgba(34, 197, 94, 0.1);
        color: var(--free);
        border: 1px dashed var(--free);
    }
    .spot-btn.free:hover {
        background: var(--free);
        color: black;
    }
    .spot-btn.taken {
        background: #444; /* Lighter background for better visibility */
        color: white;     /* White text */
        border: 1px solid #555;
    }
    .spot-name {
        font-weight: bold;
        font-size: 1.1rem;
    }
    .spot-level {
        font-size: 0.8rem;
        color: #ccc;
        margin-top: 0.2rem;
    }
    .spot-btn.mine {
        background: rgba(239, 68, 68, 0.2); /* Lighter red background */
        color: white;
        border: 1px solid var(--danger);
        cursor: pointer;
    }
    .spot-btn.mine:hover {
        background: var(--danger);
    }
    .spot-btn.mine .spot-name::after {
        content: ' (You)';
        font-size: 0.7em;
        opacity: 0.8;
    }
    
    .user-info {
        margin-top: 3rem;
        text-align: center;
        padding-top: 1rem;
        border-top: 1px solid #333;
    }
    .btn-secondary {
        background: #444;
        color: white;
        margin-left: 1rem;
    }
    
    dialog {
        background: var(--card-bg);
        color: white;
        border: 1px solid #444;
        border-radius: 8px;
        padding: 2rem;
    }
    dialog::backdrop {
        background: rgba(0,0,0,0.8);
    }
    dialog input, dialog select {
        display: block;
        margin: 1rem 0;
        padding: 0.5rem;
        width: 100%;
        box-sizing: border-box;
        background: #333;
        color: white;
        border: 1px solid #555;
        border-radius: 4px;
    }
    
    .match-info {
        grid-column: 1 / -1;
        text-align: center;
        margin-bottom: 1rem;
    }
    .match-info h2 {
        font-size: 1.5rem;
        color: white;
    }
    .loading, .no-match, .error {
        text-align: center;
        grid-column: 1 / -1;
        padding: 2rem;
        color: #888;
    }
</style>
